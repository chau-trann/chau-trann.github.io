{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/chau-trann/FIT3179/main/pivotdata_death.csv"
    },
    "width": 700,
    "height": 400,

    "transform": [
      {"filter": "datum.Entity !== 'Alzheimer.s.Disease.and.Other.Dementias'"},
        {"filter": "datum.Continent == 'Asia'"},
        {"filter": "datum.Code == 'AFG'"}
    ],
    "mark": {
      "type": "circle",
      "opacity": 0.8,
      "stroke": "blue",
      "strokeWidth": 0.5
    },
    "encoding": {
      "x": {
        "field": "Year",
        "type": "temporal",
        "axis": {"grid": false}
      },
      "y": {"field": "Entity", "type": "nominal", "axis": {"title": ""}},
      "size": {
        "field": "Deaths",
        "type": "quantitative",
        "title": "Annual Global Deaths",
        "legend": {"clipHeight": 30},
        "scale": {"rangeMax": 5000}
      },
      "color": {"field": "Entity", "type": "nominal", "legend": null}
    }
  }
  
  
  