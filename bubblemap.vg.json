{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "title": "causes of death",
    "data": {
      "url": "https://raw.githubusercontent.com/chau-trann/FIT3179/main/newdata_death.csv"
    },
    "params": [
      {
        "name": "Trading",
        "value": 0,
        "bind": {
          "input": "range",
          "min": 0,
          "max": 300000,
          "step": 50000,
          "name": " names for tehe pramers "
        }
      },
      {
        "name": "Year_selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "labels": [
            "Show All",
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "name": "Year Selection: "
        }
      }
    ],
    "transform": [
      {"filter": "datum.Year > 0"},
      {"filter": "datum.HIV_AIDS > 0"}
  
    ],
    "encoding": {
      "x": {
        "field": "Year",
        "type": "quantitative",
        "title": "Economic Freedom",
        "axis": {"tickCount": 2},
        "scale": { "domain": [2000, 2019]}
      },
      "y": {
        "field": "HIV_AIDS",
        "type": "quantitative",
        "title": "Freedom to Trade",
        "axis": {"tickCount": 2},
        "scale": {"domain": [0, 11]}
      }
    },
    "layer": [
      {
        "mark": "circle",
        "encoding": {
          "size": {
            "field": "Year",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [50000, 100000, 150000, 200000, 300000],
              "range": [10, 50, 150, 200, 300, 4000]
            },
            "legend": {"format": ".1s"}
          },
          "color": {
            "field": "Year",
            "type": "nominal",
            "scale": {
              "domain": [
                "North America",
                "South America",
                "Europe",
                "Africa",
                "Asia",
                "Oceania"
              ],
              "range": [
                "#e41a1c",
                "#984ea3",
                "#ff7f00",
                "#a6cee3",
                "#377eb8",
                "#a65628"
              ]
            }
          },
          "opacity": {"value": 0.6},
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "Year", "type": "quantitative", "format": ","},
            {"field": "HIV_AIDS", "type": "quantitative", "format": ","}
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "dx": -12,
          "fontSize": 11.5,
          "fontStyle": "italic"
        },
        "encoding": {
          "text": {"field": "Country", "type": "nominal"},
          "color": {"value": "black"},
          "opacity": {
            "condition": {
              "test": "datum['Country'] == 'China' || datum['Country'] == 'Singapore' || datum['Country'] == 'Australia' || datum['Country'] == 'New Zealand' || datum['Country'] == 'Italy' || datum['Country'] == 'Yemen' ||  datum['Country'] == 'United States'",
              "value": 1
            },
            "value": 0
          },
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "Year", "type": "quantitative", "format": ","},
            {"field": "HIV_AIDS", "type": "quantitative", "format": ","}
          ]
        }
      }
    ]
  }